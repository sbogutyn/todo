!!!
%html
  %head
    %title Lista zadań
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield :head
  %body
    #user_nav
      - if user_signed_in?
        = gravatar_image_tag(current_user.email, :alt => 'gravatar użytkownika')
        #user_info
          Zalogowany jako #{current_user.email}. 
          = link_to "Wyloguj", destroy_user_session_path
      - else
        #user_info
          = link_to "Zarejestruj się", new_user_registration_path
          lub
          = link_to "Zaloguj", new_user_session_path
    = yield
