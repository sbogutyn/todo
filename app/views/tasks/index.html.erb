<% content_for :head do %>
  <style>
    body {
      background-color: #f2f5f8;
    }
    h1 {
      color: orange;
      text-shadow: 2px 2px 2px #000;
    }
    a {
      color: black;
      text-decoration: none;
    }
    a:visited {
      
    }
    a:hover {
      color: white;
    }
    #wrapper {
      margin: 0 auto 0 auto;
      text-align: center;
      width: 760px;
    }
    table {
      border-collapse: separate;
      font-family: "Trebuchet MS", sans-serif;
      font-size: 16px;
      font-weight: bold;
      line-height: 1.4em;
      font-style: normal;
      color: black;
    }
    th {
      -moz-border-radius: 15px;
      -webkit-border-radius: 15px;
      border-radius: 15px;

    }
    tbody {

    }
    tr {
      background-color : #8ea7c3;     
    }
    tr:nth-child(odd) {
      background-color: #a4b8cf;
    }
    td {
      -moz-border-radius: 15px;
      border-radius: 15px;

      padding: 10px;
    }
    .name {
      width: 300px;
    }
    .progress, .priority {
      width: 70px;
    }
    a.tname {
      color: white;
    }
    .nowe_zadanie {
      font-size: 16px;
      display: block;
      width: 200px;
      height: 60px;
      background-color : #8ea7c3;     
      margin: 0 auto 0 auto;
      border-radius: 15px;
      -moz-border-radius: 15px;

    }
    .nowe_zadanie p {
      line-height: 50px;
      font-size: 25px;
      font-weight: bold;
      color: white;
    }
  </style>
<% end %>

<div id="wrapper">

  <h1>Lista zadań:</h1>
  <% if user_signed_in? %>
    Bieżący użytkownik: <%= current_user.email %>
  <% end %>

  <table id="lista">
    <thead>
      <tr>
        <th class="name">Nazwa</th>
        <th class="progress">Postęp</th>
        <th class="priority">Priorytet</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="name"><%= link_to task.name, task, :class => "tname" %></td>
          <td class="progress"><%= task.progress %></td>
          <td class="priority"><%= task.priority %></td>
          <td><%= link_to 'Edytuj', edit_task_path(task) %></td>
          <td><%= link_to 'Usuń', task, :confirm => 'Na pewno?', :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h1> Ilość zadań: <%= @tasks.count %> </h1>
  <%= link_to new_task_path, :class => "nowe_zadanie" do %>
    <p>Nowe zadanie</p>
  <% end %>
  <br />
</div>

<%#= link_to 'Ajax', tasks_path, :remote => true %>
<br/>


